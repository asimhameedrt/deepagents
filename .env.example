# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Langfuse (Optional - for observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Agent Configuration
MAX_SEARCH_DEPTH=5
MAX_QUERIES_PER_DEPTH=10
MIN_CONFIDENCE_THRESHOLD=0.6
MAX_CONCURRENT_SEARCHES=5

# Confidence Calculation Configuration
# Adjust these weights to change how confidence is calculated
# Formula: confidence = (findings * 0.4) + (sources * 0.3) + (gaps * 0.2) + (validation * 0.1)
CONFIDENCE_THRESHOLD=0.85
CONFIDENCE_WEIGHT_FINDINGS=0.4
CONFIDENCE_WEIGHT_SOURCES=0.3
CONFIDENCE_WEIGHT_GAPS=0.2
CONFIDENCE_WEIGHT_VALIDATION=0.1

# Termination Control
STAGNATION_CHECK_ITERATIONS=2

# Cross-validation
ENABLE_MODEL_CROSS_VALIDATION=false

# Model Configuration
OPENAI_SEARCH_MODEL=gpt-4o-mini
OPENAI_EXTRACTION_MODEL=gpt-4o-mini
OPENAI_PLANNER_MODEL=gpt-4o-mini
CLAUDE_MODEL=claude-sonnet-4-20250514

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
REPORTS_DIR=reports

# Development
DEBUG=false
